<section class="gallery section">
    <div class="gallery__header">
        <h2 class="gallery__title">Галерея проекта</h2>
        <div class="gallery__controls swiper-controls">
            <div class="swiper-button-prev">
                <object data="/images/svg-icons/navigation-arrow.svg" type="image/svg+xml"></object>
            </div>
            <div class="swiper-button-next">
                <object data="/images/svg-icons/navigation-arrow.svg" type="image/svg+xml"></object>
            </div>
        </div>
    </div>
    <div class="gallery__body">
        <div class="gallery__swiper swiper">
            <div class="swiper-wrapper">
                {% for i in range(1,5) %}
                    <a href="/images/service-0{{ i }}.png" data-fancybox="gallery" class="gallery__slide swiper-slide">
                        <img class="gallery__img" src="/images/service-0{{ i }}.png" alt="">
                    </a>
                {% endfor %}
                {% for i in range(1,3) %}
                    <a href="/images/service-0{{ i }}.png" data-fancybox="gallery" class="gallery__slide swiper-slide">
                        <img class="gallery__img" src="/images/service-0{{ i }}.png" alt="">
                    </a>
                {% endfor %}
            </div>
        </div>
    </div>
</section>