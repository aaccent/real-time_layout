<section class="gallery section">
    <div class="gallery__header">
        <h2 class="gallery__title">Галерея проекта</h2>
        <div class="gallery__controls swiper-controls">
            <div class="swiper-button-prev">
                <object data="/images/svg-icons/navigation-arrow.svg" type="image/svg+xml"></object>
            </div>
            <div class="swiper-button-next">
                <object data="/images/svg-icons/navigation-arrow.svg" type="image/svg+xml"></object>
            </div>
        </div>
    </div>
    <div class="gallery__body">
        <div class="gallery__swiper swiper">
            <div class="swiper-wrapper">
                {% for i in range(1,5) %}
                    <div class="gallery__slide swiper-slide">
                        <img class="gallery__img" src="/images/service-0{{ i }}.png" alt="">
                    </div>
                {% endfor %}
                {% for i in range(1,3) %}
                    <div class="gallery__slide swiper-slide">
                        <img class="gallery__img" src="/images/service-0{{ i }}.png" alt="">
                    </div>
                {% endfor %}
            </div>
        </div>
        <div class="gallery__popup">
            <div class="gallery__popup-backdrop"></div>
            <button class="gallery__popup-close" type="button"></button>
            <div class="gallery__popup-swiper swiper">
                <div class="swiper-wrapper">
                    {% for i in range(1,5) %}
                        <div class="gallery__popup-slide swiper-slide">
                            <img class="gallery__img" src="/images/service-0{{ i }}.png" alt="">
                        </div>
                    {% endfor %}
                    {% for i in range(1,3) %}
                        <div class="gallery__popup-slide swiper-slide">
                            <img class="gallery__img" src="/images/service-0{{ i }}.png" alt="">
                        </div>
                    {% endfor %}
                </div>
                <div class="gallery__controls swiper-controls">
                    <div class="swiper-button-prev">
                        <object data="/images/svg-icons/navigation-arrow.svg" type="image/svg+xml"></object>
                    </div>
                    <div class="swiper-button-next">
                        <object data="/images/svg-icons/navigation-arrow.svg" type="image/svg+xml"></object>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>