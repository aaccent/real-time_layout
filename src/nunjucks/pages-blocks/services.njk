                <h2 class="services__title section__title _h2">Услуги</h2>
            </div>
            <div class="section__body">
                <div class="services__list">
                    {% set services = ["Рестораны и бары", "Офисы", "Магазины", "Торговые островки", "Конструктивные решения", "Архитектурные решения", "Электрика и освещение", "Водоснабжение и водоотведение", "Вентиляция и кондиционирование", "Слаботочные сети", "Проектирование вывески" ] %}
                    {% for service in services %}
                        {{ ServiceItem(service, loop.index) }}
                    {% endfor %}
                </div>
            </div>
        </div>
    {# </div> #}
</section>